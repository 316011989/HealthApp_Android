<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/publishcomment_edit_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edittext_normal"
        android:hint="标题(必填,最多30字)"
        android:padding="5dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/login_edittext_normal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/publishcomment_edit_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="内容"
            android:padding="5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/publishcomment_ll_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="invisible" >
            </LinearLayout>

            <Button
                android:id="@+id/publishcomment_btn_addpic"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@mipmap/add_pic"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="添加图片"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/publishcomment_content_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0/5000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>