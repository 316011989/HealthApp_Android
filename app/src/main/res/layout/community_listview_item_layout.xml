<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/community_listView_item_title_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/community_listView_item_title"
            style="@style/TextSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="bottom|left"
            android:text="糖尿病圈"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/community_listView_item_icon"
            style="@style/TextSize12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/reply_btn"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/community_listView_item_topic_"
        style="@style/TextSize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_listView_item_title_"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        android:text="关注"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/community_listView_item_topic"
        style="@style/TextSize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_listView_item_title_"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/community_listView_item_topic_"
        android:text="19w"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/community_listView_item_browse_"
        style="@style/TextSize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_listView_item_title_"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/community_listView_item_topic"
        android:text="话题"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/community_listView_item_browse"
        style="@style/TextSize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_listView_item_title_"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/community_listView_item_browse_"
        android:text="26w"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/community_listView_item_concern"
        style="@style/TextSize12"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:drawableTop="@drawable/community_follow_selector4cb"
        android:padding="15dp"
        android:text="关注"
        android:textColor="@color/green_common" />

</RelativeLayout>