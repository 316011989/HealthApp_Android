<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/publishtopic_edit_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edittext_normal"
        android:hint="标题(必填,最多30字)"
        android:padding="5dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/login_edittext_normal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/publishtopic_edit_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="内容"
            android:padding="5dip" />

        <TextView
            android:id="@+id/publishtopic_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0/5000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <GridView
            android:id="@+id/publishtopic_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:cacheColorHint="#00000000"
            android:focusable="false"
            android:gravity="center"
            android:horizontalSpacing="3dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:scrollbars="none"
            android:verticalSpacing="3dp" />
    </LinearLayout>

</LinearLayout>