<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voucher_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/voucher_item_111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/voucher_item_tv5"
            style="@style/TextSize12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="    凭证号："
            android:textColor="@color/titleColor" />

        <TextView
            android:id="@+id/voucher_item_vouchernum"
            style="@style/TextSize12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="012345678901234567890"
            android:textColor="@color/gray_dark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/voucher_item_112"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voucher_item_111"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <TextView
                android:id="@+id/voucher_item_tv3"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="服务类型："
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/voucher_item_servetime"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/voucher_item_tv3"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv3"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_tv1"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/effecttime"
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/voucher_item_effecttime"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/voucher_item_tv1"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv1"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_tv2"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/expiretime"
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/voucher_item_expiretime"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv1"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv2"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/voucher_item_tv7"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/qiyepay"
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/voucher_item_qiyepay"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv7"
                android:textColor="@color/orange" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/voucher_item_tv6"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/paymethod"
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/voucher_item_payobject"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv6"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_tv4"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv6"
                android:layout_marginTop="5dp"
                android:textColor="@color/titleColor"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/voucher_item_tv10"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv6"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv4"
                android:textColor="@color/gray_dark"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/voucher_item_tv8"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv4"
                android:layout_marginTop="5dp"
                android:text="@string/xinhuapay"
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/voucher_item_xinhuapay"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv4"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv8"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/voucher_item_tv9"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv8"
                android:layout_marginTop="5dp"
                android:text="@string/freepay"
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/voucher_item_freepay"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucher_item_tv8"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/voucher_item_tv9"
                android:textColor="@color/orange" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/voucher_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/voucher_disabled" />
</RelativeLayout>