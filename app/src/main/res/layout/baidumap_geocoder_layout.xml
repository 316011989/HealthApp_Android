<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/organization_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/baidumap_top_shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/org_center_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="新华北京健康管理中心"
            android:textColor="@color/titleColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/titleColor" />

        <TextView
            android:id="@+id/org_center_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/org_location"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="北京市朝阳区建国门外大街甲12号"
            android:textColor="@color/titleColor" />

        <TextView
            android:id="@+id/org_center_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/org_clock"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="8:00-17:00"
            android:textColor="@color/titleColor" />
    </LinearLayout>

</RelativeLayout>