            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/appointment_step_selector1"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/appointment_mark_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/appointment_step_selected" />
    </LinearLayout>

