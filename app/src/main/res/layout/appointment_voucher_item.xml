<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voucher_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RadioButton
        android:id="@+id/voucher_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/appointment_rb_selector" />

    <TextView
        android:id="@+id/voucher_item_tv"
        style="@style/TextSize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/voucher_item_btn"
        android:text="@string/vouchertext"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/voucher_item_vouchernum"
        style="@style/TextSize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/voucher_item_tv"
        android:textColor="@color/gray_dark" />


    <View
        android:id="@+id/voucher_item_midline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/voucher_item_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_light" />

    <LinearLayout
        android:id="@+id/voucher_item_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/voucher_item_tv"
        android:layout_below="@id/voucher_item_midline"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher_item_tv3"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sertext1"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_servetime"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher_item_tv7"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paymethod"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_payObject"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/voucher_item_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/voucher_item_tv"
        android:layout_below="@id/voucher_item_line1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher_item_tv8"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/effecttime"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_effecttime"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paymethod"
                android:textColor="@color/gray_dark" />

            <TextView
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/voucher_item_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/voucher_item_tv"
        android:layout_below="@id/voucher_item_line2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher_item_tv10"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expiretime"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_expiretime"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher_item_tv11"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xinhuapay"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_xinhuapay"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voucher_item_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/voucher_item_tv"
        android:layout_below="@id/voucher_item_line3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher_item_tv12"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qiyepay"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_qiyepay"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher_item_tv13"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/freepay"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/voucher_item_freepay"
                style="@style/TextSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>