<com.pact.healthapp.view.imagepick.customviews.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/view_imagepick_wallitem_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/defalt_pic" />

    <CheckBox
        android:id="@+id/view_imagepick_wallitem_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/view_selector_checkbox"
        android:button="@null"
        android:padding="2dp" />

</com.pact.healthapp.view.imagepick.customviews.SquareRelativeLayout>