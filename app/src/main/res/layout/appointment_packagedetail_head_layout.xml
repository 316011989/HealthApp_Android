<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_backgroud" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/appointment_packageitem_packagename"
            style="@style/TextSize16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="套餐名称"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/appointment_packageitem_tv1"
            style="@style/TextSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_packageitem_packagename"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/paymethod"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/appointment_packageitem_payObject"
            style="@style/TextSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_packageitem_packagename"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/appointment_packageitem_tv1"
            android:text="@string/default_string"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/appointment_packageitem_tv2"
            style="@style/TextSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_packageitem_packagename"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/appointment_packageitem_payObject"
            android:text="@string/market_price"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/appointment_packageitem_sellprice"
            style="@style/TextSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_packageitem_packagename"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/appointment_packageitem_tv2"
            android:text="@string/default_string"
            android:textColor="@color/orange_light" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_backgroud" />

    <TextView
        style="@style/TextSize16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="套餐项"
        android:textColor="@color/black" />


</LinearLayout>