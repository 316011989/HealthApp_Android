<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green_common"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <RadioGroup
            android:id="@+id/community_group_group"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/com_child_title_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/community_group"
                style="@style/TextSize16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/com_child_left"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/group"
                android:textColor="@drawable/com_child_title_text_color" />

            <RadioButton
                android:id="@+id/community_active"
                style="@style/TextSize16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/com_child_right"
                android:button="@null"
                android:gravity="center"
                android:text="@string/active"
                android:textColor="@drawable/com_child_title_text_color" />
        </RadioGroup>
    </LinearLayout>

    <ListView
        android:id="@+id/community_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/divider"
        android:dividerHeight="0.6dp"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>