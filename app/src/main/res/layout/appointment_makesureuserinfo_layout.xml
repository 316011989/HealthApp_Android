<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/appointment_makesureuserinfo_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/appointment_userinfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft1"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="凭证号"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvright1"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="凭证号码"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <View
                        android:id="@+id/appointment_choiceitem_bottomline"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft2"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="姓名"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/appointment_choiceitem_must2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="*"
                            android:textColor="@color/orange_light" />

                        <EditText
                            android:id="@+id/appointment_choiceitem_tvright2"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入姓名"
                            android:singleLine="true"
                            android:textColor="@color/gray_dark"
                            android:textColorHint="@color/gray_light" />

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft3"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="性别"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvright3"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="男"
                            android:textColor="@color/gray_dark" />

                        <ImageView
                            android:id="@+id/appointment_choiceitem_arrow3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@mipmap/arrow_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft4"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="证件类型"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvright4"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="身份证"
                            android:textColor="@color/gray_dark" />

                        <ImageView
                            android:id="@+id/appointment_choiceitem_arrow4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@mipmap/arrow_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft5"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="证件号码"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/appointment_choiceitem_must5"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/orange_light" />

                        <EditText
                            android:id="@+id/appointment_choiceitem_tvright5"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入证件号码"
                            android:singleLine="true"
                            android:textColor="@color/gray_dark"
                            android:textColorHint="@color/gray_light" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft6"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="婚姻状况"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvright6"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="未婚"
                            android:textColor="@color/gray_dark" />

                        <ImageView
                            android:id="@+id/appointment_choiceitem_arrow6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@mipmap/arrow_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft7"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="手机号"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/appointment_choiceitem_tvright7"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入手机号"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/gray_dark"
                            android:textColorHint="@color/gray_light" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:id="@+id/appointment_choiceitem8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appointment_choiceitem_tvleft8"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="邮箱"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/appointment_choiceitem_tvright8"
                            style="@style/TextSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入邮箱"
                            android:singleLine="true"
                            android:textColor="@color/gray_dark"
                            android:textColorHint="@color/gray_light" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_light" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/appointment_makesureuserinfo_tip"
                style="@style/TextSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_userinfos"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="如果以上信息有误,请联系客服95567-6进行修改"
                android:textColor="@color/gray">

            </TextView>
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4A4A4A"
        android:orientation="vertical">

        <Button
            android:id="@+id/appointment_makesure_next"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/next"
            android:textSize="14dp" />
    </LinearLayout>


</RelativeLayout>